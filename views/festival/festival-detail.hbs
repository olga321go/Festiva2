<div id="detail-page">
  <div id="detail-page-img">
    <img src="{{currentFestival.festivalImg}}" alt="festival image" />

  </div>

  <div id="detail-page-text">
    <h1>{{currentFestival.name}}</h1><br />
    <h3><i class="bi bi-geo-alt-fill"></i>
      Location:
      {{currentFestival.location}}</h3><br />
    <h3><i class="bi bi-calendar-week"></i>
      Date:
      {{parsedDate}}</h3><br />
    <h3><i class="bi bi-music-note"></i>
      Lineup: {{currentFestival.lineup}}</h3><br>
    <h3><i class="bi bi-cash-coin"></i>
      Ticket price:
      {{currentFestival.ticketPrice}}$</h3><br />
    <h3><i class="bi bi-person-add"></i>
      Created by:
      {{currentFestival.author.username}}</h3><br />

    <h4>{{currentFestival.info}}</h4><br />
  </div>
</div>

